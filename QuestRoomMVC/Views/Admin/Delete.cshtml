@model QuestRoomMVC.Models.QuestRoom

<h2>Delete Quest Room</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.Duration minutes</dd>
        <dt class="col-sm-2">Min Players</dt>
        <dd class="col-sm-10">@Model.MinPlayers</dd>
        <dt class="col-sm-2">Max Players</dt>
        <dd class="col-sm-10">@Model.MaxPlayers</dd>
        <dt class="col-sm-2">Min Age</dt>
        <dd class="col-sm-10">@Model.MinAge</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Company</dt>
        <dd class="col-sm-10">@Model.Company</dd>
        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>
        <dt class="col-sm-2">Fear Level</dt>
        <dd class="col-sm-10">@Model.FearLevel</dd>
        <dt class="col-sm-2">Difficulty Level</dt>
        <dd class="col-sm-10">@Model.DifficultyLevel</dd>
        <dt class="col-sm-2">Logo</dt>
        <dd class="col-sm-10">
            <img src="@Model.Logo" alt="Logo" style="max-width: 200px;" />
        </dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>